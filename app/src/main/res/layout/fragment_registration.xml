<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationFragment"
    tools:layout_editor_absoluteY="25dp">


    <TextView
        android:id="@+id/registrationScreen__title"
        android:layout_width="222dp"
        android:layout_height="59dp"
        android:layout_marginTop="16dp"
        android:fontFamily="cursive"
        android:text="Registration"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="298dp"
        android:layout_height="322dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registrationScreen__title">

        <Button
            android:id="@+id/registrationScreen__restaurantRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Restaurant"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/registrationScreen__dinnerRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dinner"
            android:layout_weight="1"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>